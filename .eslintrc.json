{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"rules": {
		"strict": 1,
		"no-undef": 1,
		"no-console": 0,
		"no-extra-semi": 1,
		"no-unused-vars": 1,
		"indent": [1, "tab", { "SwitchCase": 1 }],
		"semi": [1, "always"],
		"quotes": [1, "single", "avoid-escape"],
		"comma-spacing": [1, { "before": false, "after": true }]
	}
}
